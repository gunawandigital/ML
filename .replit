entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["binutils", "cairo", "ffmpeg-full", "freetype", "gcc", "ghostscript", "glibc", "glibcLocales", "gobject-introspection", "gtk3", "libgomp", "ocl-icd", "opencl-headers", "pkg-config", "qhull", "stdenv", "tcl", "tk"]

[env]
LD_LIBRARY_PATH = "/nix/store/*-gcc-*/lib64:/nix/store/*-gcc-*/lib:/nix/store/*-glibc-*/lib:/nix/store/*-libgomp-*/lib"
LIBRARY_PATH = "/nix/store/*-gcc-*/lib64:/nix/store/*-gcc-*/lib:/nix/store/*-glibc-*/lib:/nix/store/*-libgomp-*/lib"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python web_server.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Trading System"

[[workflows.workflow]]
name = "Run Trading System"
author = 37170483
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Web Dashboard"
author = 37170483
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_dashboard.py"

[[workflows.workflow]]
name = "Live Trading"
author = 37170483
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_live_trading.py"

[[ports]]
localPort = 5000
externalPort = 80
