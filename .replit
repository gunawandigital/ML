entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk", "gcc", "libgomp", "glibc", "stdenv", "binutils"]

[env]
LD_LIBRARY_PATH = "/nix/store/*-glibc-*/lib:/nix/store/*-gcc-*/lib:/nix/store/*-libgomp-*/lib:/nix/store/*-gcc-*/lib/gcc/*/*"
LIBRARY_PATH = "/nix/store/*-glibc-*/lib:/nix/store/*-gcc-*/lib:/nix/store/*-libgomp-*/lib"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Trading System"

[[workflows.workflow]]
name = "Run Trading System"
author = 37170483
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
